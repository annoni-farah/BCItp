<StartScreen>:

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 20

            Button:
                text: 'General Settings'
                on_press: self.change_to_gen_settings
            Button:
                text: 'BCI Menu'
                on_press: self.change_to_bci
            Button:
                text: 'Save'
                on_press: self.save_session_name