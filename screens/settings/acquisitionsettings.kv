<AcquisitionSettings>:
    
    GridLayout:
        rows: 1
        size_hint: (1, None)
        height: 50
        spacing: 5
        padding: 5
        ToggleButton:
            state: 'down'
            text: 'Simulator'
            group: 'mainmenu'
            on_press:
                root.m.current = 'simu'
                if self.state == 'normal': self.state = 'down'
        ToggleButton:
            text: 'OpenBCI'
            group: 'mainmenu'
            on_press:
                root.m.current = 'openbci'
                if self.state == 'normal': self.state = 'down'
