<BCIMenu>:

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 20
            size_hint: None, None
            size: self.minimum_size

            Label:
                font_size: 20
                text: 'BCI Menu'

            Button:
                text: 'Acquisition Settings'
                on_press: root.change_to_openbci()
                size_hint: None,None
                size: 200,50

            Button:
                text: 'Pre Calibration'
                on_press: root.change_to_precal()
                size_hint: None,None
                size: 200,50

            Button:
                text: 'Calibration'
                on_press: root.change_to_calibration()
                size_hint: None,None
                size: 200,50

            Button:
                text: 'Validation'
                on_press: root.change_to_validation()
                size_hint: None,None
                size: 200,50

            Button:
                text: 'Machine Learning'
                on_press: root.change_to_ml()
                size_hint: None,None
                size: 200,50

            Button:
                text: 'Game'
                on_press: root.change_to_game()
                size_hint: None,None
                size: 200,50

            Button:
                text: 'Back'
                on_press: root.change_to_start()
                size_hint: None,None
                size: 200,50
