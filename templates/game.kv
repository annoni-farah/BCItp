<GameContainer>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    BoxLayout:
        spacing: 10
        padding: 10

        GameSidePanel:
            GameBar:

            GameBar:

        GamePlayGround:

        GameSidePanel:
            GameBar:

            GameBar:

    GameBottomPanel:

        GameButtonPanel:

        GameInfoPanel:

<GameSidePanel>:
    size_hint_x: 0.1
    spacing: 10
    padding: 10 
    
<GamePlayGround>:
    size_hint_x: 0.8
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

        Color:
            rgba: .15,.15,.15,1
        Rectangle:
            size: self.size[0]-10,self.size[1]-10,
            pos: self.pos[0]+5,self.pos[1]+5

<GameBottomPanel>:
    orientation: 'vertical'
    size_hint: (1, 0.3)
    spacing: 10
    padding: 10

    canvas:
        Color:
            rgba: 0,0,1,1
        Rectangle:
            size: self.size
            pos: self.pos 

    GameInfoPanel:

    GameButtonPanel:


<GameButtonPanel>:
    rows: 1
    spacing: 10
    padding: 10
    
    canvas:
        Color:
            rgba: .3,1,0,1
        Rectangle:
            size: self.size
            pos: self.pos 

<GameInfoPanel>:
    canvas:
        Color:
            rgba: 1,.3,0,1
        Rectangle:
            size: self.size
            pos: self.pos 

<GameBar>:
    orientation: 'bt'
    color: (1,0,0,1)
    animated: False
    value: 100